{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2022", "ESNext"],
        "types": ["./src/types.d.ts", "@types/node"],
        "isolatedModules": true,
        "esModuleInterop": true,
        // "jsxFactory": "React.createElement",
        // "jsxFragmentFactory": "React.Fragment",
        "jsx": "react-jsx",
        "outDir": "dist",
        "jsxImportSource": "jsx-xml",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "target": "ES2022",
        "strict": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "noImplicitAny": false,
        "paths": {
            "@/*": ["./src/*"],
            "~/*": ["./public/*"],
            "website/*": ["./*"],
        },
    },
    "include": ["src", "scripts", "examples/"],
    "exclude": ["kdenlive-old"],
}
